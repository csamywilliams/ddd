<% include ../partials/head %>
<main>
   <section class="container content">
      <div class="col-md-8">
         <h1>Contact</h1>
         <% if(dddwales.hasOwnProperty('contactFormError') && dddwales.contactFormError === true) { %>
          <p class="notification bg-danger">There was an error sending the form, please try again. </p>
         <% } %>
         <% if(dddwales.hasOwnProperty('contactFormSuccess') && dddwales.contactFormSuccess === true) { %>
         <p class="notification bg-success">
            Form submitted successfully, we will be in touch shortly.
         </p>
         <% } %>
         <p>Please fill in the below form and we'll get back to you as soon as possible.</p>
         <form id="contact" method="post" action="/form/" data-parsley-validate>
            <div class="form-group">
               <label for="fullname">Full name</label>
               <input class="form-control" id="fullname" name="fullname" placeholder="Enter name" required>
            </div>
            <div class="form-group">
               <label for="emailAddress">Email address</label>
               <input type="email" class="form-control" id="emailAddress" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
               <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
               <label for="message">Message</label>
               <textarea class="form-control" id="message" name="message" placeholder="Ask a question"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
         </form>
		 <hr>
		 <% if(ddd[0].email != '') { %>
	  <div class="col-md-8">
	  <h2>Having trouble?</h2>
		<p>If you are having trouble submitting the above contact form, please feel free to email us <a href="mailto:<%= ddd[0].email %>"><%= ddd[0].email %></a>. 
	  </div>
	  <% } %>
      </div>
	  <% include ../partials/twitter-sidebar %>
	  
	  
      
   </section>
   
</main>
<% include ../partials/footer %>
